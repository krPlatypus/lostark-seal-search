{
  "name": "Lostark 각인 경매장",
  "description": "설명 무",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_title": "Lostark 각인 경매장",
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://lostark.game.onstove.com/*"],
    "js": ["contentScript.js"]
  }]
}
